<div class="row">
    <div class="col-md-12">
        <h2> تسجيل جديد </h2>
    </div>
</div>
<hr />
<div class="container">
    <form action="/registration/register" method="POST" id="register">
        <br>
        {{error}}
        <div class="row">
            <div class="form-group col-6">
                <label for="username">الاسم : </label>
                <input type="text" class="form-control" id="username" name="username" placeholder="ادخل اسمك " autofocus >
            </div>
        </div>

        <div class="row">
            <div class="form-group col-6">
                <label for="universityID">الرقم الجامعي</label>
                <input type="text" class="form-control" id="universityID" name="universityID" placeholder="ادخل رقمك الجامعي " >
            </div>
        </div>
        
        <div class="row">        
            <div class="form-group col-6">
                <label for="email"> الإيميل : </label>
                <input type="text" class="form-control" id="email" name="email" placeholder="الإيميل الجامعي" >
            </div>
        </div>


        <div class="row">
            <div class="form-group col-6">
                <label for="password"> كلمة السر : </label>
                <input type="password" class="form-control" id="password" name="password" placeholder="كلمة السر" >
            </div>
        </div>

        <div class="row">
            <div class="form-group col-4">
                <button type="submit" class="btn btn-danger">سجلني</button>
            </div>
        </div>

    </form>
</div>